<div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-0"><%= t ".title" %></h1>
  <div>
    <%= link_to t(".back"), admin_cuisines_path, class: "btn btn-secondary" %>
  </div>
</div>
<div>
  <%= render "admin/shared/order_search_bar" %>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
<table class="table">
  <thead>
    <tr>
      <th><%=  sort_link(@q, :created_at, t(".date"), default_order: :desc) %></th>
      <th><%=  t(".address") %></th>
      <th><%=  t(".phone") %></th>
      <th><%=  sort_link(@q, :sum, t(".total_amount"), default_order: :desc) %></th>
      <th><%=  sort_link(@q, :status, t(".status"), default_order: :desc) %></th>
      <th><%= t(".details") %></th>
      <th class="operations"><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin/shared/order", collection: @orders %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
